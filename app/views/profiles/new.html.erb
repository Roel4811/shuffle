<div class="profileContainer">
  <div class="leftMenu">
    <ul>
      <li>Profiel instellingen</li>
      <li>Ontvangen contactverzoeken</li>
      <li>Verzonden contactverzoeken</li>
      <li>Favorieten</li>
      <li>Mijn chats</li>
    </ul>
  </div>
  <div class="profileForm">
    <h1>Mijn profiel</h1>
    <h3>Vereiste gegevens</h3>
          <%= form_for @profile do |f| %>

        <%= f.text_field :name, class: "homeFormField", placeholder: "Naam" %>
        <%= f.text_field :age, class: "homeFormField", placeholder: "Leeftijd"  %>
        <%= f.text_field :location, class: "homeFormField", placeholder: "Woonplaats"  %>
        <%= f.file_field  :photo, class: "homeFormField", placeholder: "Foto"  %>
        <%= f.hidden_field  :photo_cache %>

      <%= f.submit "Go", class: "btn btn-primary" %>
    <% end %>
  </div>
  <div class="profileScore">
    <h1>Profielscore: 60% </h1>
    <div class="teaserCard">
      <div class="teaserCard_thumb">
        <%= cl_image_tag @profile.photo, height: 200, width: 200, crop: :fill %>
      </div>
      <div class="teaserCard_body">
        <div class="card_info">
          <strong><%= @profile.name %></strong>  <br>
          leeftijd: <%= @profile.age %> <br>
          woonplaats: <%= @profile.location %> <br>
          beroep: freelance <br>
        </div>
        <div class="teaserCard_description">
            <%= @profile.description %>
        </div>
      </div>
      <div class="contactBox">
        <%= link_to "Neem contact op ;-)", new_user_session_path, class: "signupLink" %>
      </div>
    </div>
  </div>

</div>

