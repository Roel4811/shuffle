<div class="profileContainer">
  <div class="leftMenu">
    <ul>
      <li class="tab active" data-target="#profileForm"><a href="">Profiel instellingen</a></li>
      <li class="tab" data-target="#contact-received"><a href="">Ontvangen contactverzoeken</a></li>
      <li class="tab" data-target="#contact-send"><a href="">Verzonden contactverzoeken</a></li>
      <li class="tab" data-target="#favourites"><a href="">Favorieten</a></li>
      <li class="tab" data-target="#chats"><a href="">Mijn chats</a></li>
    </ul>
  </div>
  <div class="profileForm tab-content" id="profileForm">
    <%= render "profile_form" %>
  </div>

  <div class="contactReceived tab-content hidden" id="contact-received">
    <%= render "contact_received" %>
  </div>

  <div class="contactSend tab-content hidden" id="contact-send">
    <%= render "contact_send" %>
  </div>

  <div class="favBox tab-content hidden" id="favourites">
    <%= render "favourites" %>
  </div>

  <div class="chatBox tab-content hidden" id="chats">
    <%= render "chats" %>
  </div>


  <div class="profileScore">
    <h1>Profielscore: 60% </h1>
    <div class="teaserCard">
      <div class="teaserCard_thumb">
        <%= cl_image_tag @profile.photo, height: 200, width: 200, crop: :fill %>
      </div>
      <div class="teaserCard_body">
        <div class="card_info">
          <strong><%= @profile.name %></strong>  <br>
          leeftijd: <%= @profile.age %> <br>
          woonplaats: <%= @profile.location %> <br>
          beroep: freelance <br>
        </div>
        <div class="teaserCard_description">
            <%= @profile.description %>
        </div>
      </div>
      <div class="contactBox">
        <%= link_to "Neem contact op ;-)", new_user_session_path, class: "signupLink" %>
      </div>
    </div>
  </div>

</div>

