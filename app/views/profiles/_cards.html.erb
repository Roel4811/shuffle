<% @profiles.each do |profile| %>
  <div class="col-xs-12 col-sm-6 col-md-4">
    <div class="card">
      <div class="card_thumb">
        <%= cl_image_tag profile.photo, height: 250, width: 370, crop: :fill %>
      </div>
      <div class="card_date">
        <span class="card_date_day">12</span>
        <span class="card_date_month">April</span>
      </div>
      <div class="card_body">
        <div class="card_category"><a href="#">PhotoÂ´s</a></div>
        <h2 class="card_title"><a href="#"><%= profile.name %></a></h2>
        <div class="card_subtitle">age: <%= profile.age %> <br> location: <%= profile.location %>
        </div>
        <div class="card_description"><%= profile.description %>
          <br>
          <br>
          <%= link_to "show profile", profile_path(profile), class: "button" %>
        </div>

      </div>
      <footer class="card_footer">
        <span class="icon icon--time"></span>last online(yesterday)
      </footer>
    </div>
  </div>
<% end %>
